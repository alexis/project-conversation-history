<div class="container mx-auto p-6">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Your Projects</h1>

  <% if @projects.any? %>
    <ul class="space-y-4">
      <% @projects.each do |project| %>
        <li class="bg-white shadow-md p-4 rounded-lg hover:bg-gray-50 transition">
          <h2 class="text-xl font-semibold text-gray-700">
            <%= link_to project.name, project_path(project), class: "text-blue-600 hover:underline" %>
          </h2>
          <p class="text-gray-600">Status: <%= project.status.humanize %></p>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-600">No projects found. Start by creating a new project!</p>
  <% end %>
</div>
